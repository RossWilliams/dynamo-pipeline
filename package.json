{
  "name": "dynamo-pipeline",
  "version": "0.3.0-0",
  "description": "Alternative API for DynamoDB's DocumentClient",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "exports": {
    "import": "./esm/index.js",
    "require": "./lib/index.js",
    "default": "./esm/index.js"
  },
  "files": [
    "lib",
    "esm"
  ],
  "repository": "https://github.com/RossWilliams/dynamo-pipeline.git",
  "author": "RossWilliams",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "build": "rm -rf lib && rm -rf esm && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "build:watch": "tsc --build --watch",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:dynamodb": "TEST_WITH_DYNAMO=true NODE_ENV=test jest",
    "lint": "eslint './{src,test}/*.ts' --cache --cache-location '.buildcache/' --fix --ext .ts",
    "format": "prettier --write ./{src,test}/*.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.41.0",
    "@aws-sdk/lib-dynamodb": "^3.41.0",
    "@aws-sdk/util-dynamodb": "^3.41.0"
  },
  "peerDependencies": {
    "@types/jest": "^26.0.19"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.2",
    "typescript": "4.2.2"
  },
  "jest": {
    "testRegex": "/(test)/.*\\.test\\.[jt]s?$",
    "setupFiles": [
      "./test/jest.setup.ts"
    ],
    "moduleFileExtensions": [
      "mjs",
      "js",
      "json",
      "ts",
      "node"
    ],
    "transform": {
      "^.+\\.mjs$": "babel-jest",
      "\\.tsx?$": [
        "ts-jest"
      ]
    },
    "testPathIgnorePatterns": [
      "node_modules/",
      ".buildcache/"
    ],
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/mocks/*.ts"
    ],
    "testTimeout": 90000
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  }
}
